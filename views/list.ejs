    <div class="row ">
        <div class="col-md-8 row">
            <h3 class="pb-4 mb-4 fst-italic border-bottom">
                Quelques articles
            </h3>

            <% for (const { index, title, description, date, picture } of articles) { %>

                <article class="card col-lg-5 m-2 p-0">
                    <img src="https://picsum.photos/200/100"
                        alt="" class="card-img-top">
                    <div class="card-body">
                        <strong class="d-inline-block mb-2 text-primary">Categorie</strong>
                        <h5 class="card-title">
                            <%= title %>
                        </h5>
                        <div class="mb-1 text-muted">
                            <%= date %>
                        </div>
                        <p class="card-text">
                            <%= description %>
                        </p>
                        <% if(alias) { %>
                            <a href="/article/<%= index %>" class="btn btn-outline-success btn-sm">Read More</a>

                            <a href="/article/delete/<%= index %>" class="btn btn-outline-danger btn-sm">
                                <button>X</button>

                            </a>
                            <% } %>
                    </div>
                </article>
                <%}%>

        </div>

        <div class="col-md-4">
            <div class="position-sticky" style="top: 2rem;">
